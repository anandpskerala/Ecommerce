<%- include('../partials/user/header.ejs') %>
<header>
    <%- include('../partials/user/navbar.ejs') %>
</header>
<div class="auth-container">
    <h1>Forgot Password</h1>
    <div class="box">
        <div class="section">
            <p class="disclaimer" style="margin-bottom: 20px;">Please enter the email address associated with your account. We'll promptly send you a link to reset your password.</p>
            <% if (error_message && error_message.length > 0) { %>
                <p class="error-message"><%= error_message %></p>
            <% } %>
            <form action="/user/send-otp" method="post" id="auth-form">
                <div class="col" style="margin-bottom: 20px;">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email" value="" data-validate="required">
                    <span id="email_error" class="form-error"></span>
                </div>
                <button type="submit">Continue</button>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/user/footer.ejs') %>