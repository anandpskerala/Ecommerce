<%- include('../partials/admin/header.ejs') %>
<header>
    <%- include('../partials/admin/navbar.ejs') %>
</header>
<div class="row">
    <%- include('../partials/admin/sidebar.ejs') %>
    <div class="cover">
        <div class="cover-head">
            <h2>Offers</h2>
            <div class="row">
                <a href="/admin/create-offer" style="display: flex; flex-direction: row; align-items: center; gap: 10px;">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 10H18" stroke="#F5F5F7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M10 2V18" stroke="#F5F5F7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span style="font-weight: 500;">Create Offer</span>                        
                </a>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Discount</th>
                    <th>Activation Date</th>
                    <th>Expiry Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="user-table">
                <% offers.forEach((offer) => { %>
                    <% let status = offer.status != false ? 'active' : 'blocked' %>
                    <tr>
                        <td>
                            <span><%= offer.name %></span>
                        </td>
                        <td><%= offer.discount %>%</td>
                        <td><%= time.formatDate(offer.activation) %></td>
                        <td><%= time.formatDate(offer.expiry) %></td>
                        <td><span class="status-<%= status %>"><%= status %></span></td>
                        <td>
                            <button class="action-btn action-delete" onclick="delete_offer('<%= offer._id %>')">Delete</button>                               
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <ul class="pagination">
            <!-- Previous Page -->
            <% if (currentPage > 1) { %>
                <li onclick="paginate('<%= currentPage - 1 %>')">&lt;</li>
            <% } else { %>
                <li><span>&lt;</span></li>
            <% } %>
        
            <!-- Page Numbers -->
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="<%= i === currentPage ? 'active' : '' %>" onclick="paginate('<%= i %>')">
                    <%= i %>
                </li>
            <% } %>
        
            <!-- Next Page -->
            <% if (currentPage < totalPages) { %>
                <li onclick="paginate('<%= currentPage + 1 %>')">&gt;</li>
            <% } else { %>
                <li><span>&gt;</span></li>
            <% } %>
        </ul>
    </div>
    </div>
</div>
<%- include('../partials/admin/footer.ejs') %>